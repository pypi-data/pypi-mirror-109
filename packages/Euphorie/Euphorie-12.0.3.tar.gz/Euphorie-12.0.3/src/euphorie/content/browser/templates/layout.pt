<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:meta="http://xml.zope.org/namespaces/meta"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      meta:interpolation="true"
      metal:define-macro="layout"
      tal:define="
        tools nocall:context/@@tools;
        portal_url tools/portal_url|nothing;
        resources_timestamp here/@@refresh-resources-timestamp/resources_timestamp;
      "
      tal:condition="portal_url"
      i18n:domain="nuplone"
>
  <head tal:define="
          style_url string:${portal_url}/++resource++NuPlone.style;
        ">
    <meta http-equiv="Content-Type"
          content="text/html; charset=utf-8"
    />
    <script src="${portal_url}/++resource++NuPlone.libraries/css_browser_selector.js"
            type="text/javascript"
    ></script>
    <link href="${style_url}/main/base.css?t=${resources_timestamp}"
          media="all"
          rel="stylesheet"
          type="text/css"
    />
    <link href="${portal_url}/++resource++euphorie.resources/redactor.min.css?t=${resources_timestamp}"
          media="all"
          rel="stylesheet"
          type="text/css"
    />
    <style media="all"
           type="text/css"
    >
      ol.sortable:after {
          content: "Change order of items by dragging the handle";
       }
    </style>
    <link href="${style_url}/euphorie/base.css"
          media="all"
          rel="stylesheet"
          type="text/css"
    />
    <title><metal:title define-slot="title">Page Title</metal:title>
      &mdash; ${tools/site_title}</title>
  </head>
  <body>
    <div id="content">
      <div id="mainContent">
        <metal:pagetitle define-slot="pagetitle"><h1><metal:slot define-slot="title" /></h1></metal:pagetitle>
        <metal:block define-slot="buttonbar" />
        <tal:block replace="tile:statusmessages" />
        <metal:block define-slot="content" />
      </div>
      <tal:block replace="tile:navigation" />
    </div>
    <tal:block replace="tile:tabs" />
    <p id="frameWrapper">
      <object id="siteMenu"
              type="text/html"
              data="${context/absolute_url}/@@sitemenu?view_type=${tools/view_type}"
      >
        <tal:span i18n:translate="">Can not open site menu.</tal:span>
      </object>
    </p>
    <tal:block replace="tile:actions" />
    <tal:block replace="tile:footer" />
    <script src="${portal_url}/++resource++euphorie.resources/oira.cms.min.js?t=${resources_timestamp}"></script>
    <script type="text/javascript">
      var plone = { portal_url : '${portal_url}',
                    context_url : '${context/absolute_url}' };
    </script>
    <script src="${portal_url}/++resource++NuPlone.libraries/jquery-1.11.3.min.js"
            type="text/javascript"
    ></script>
    <script src="${portal_url}/++resource++NuPlone.libraries/jquery.browser.min.js"
            type="text/javascript"
    ></script>
    <script src="${portal_url}/++resource++NuPlone.libraries/ui-1.11.4/jquery-ui.min.js"
            type="text/javascript"
    ></script>
    <script src="${portal_url}/++resource++NuPlone.tinymce/tiny_mce_src.js"
            type="text/javascript"
    ></script>
    <script src="${portal_url}/++resource++NuPlone.z3cform.js"
            type="text/javascript"
    ></script>
    <script src="${portal_url}/++resource++NuPlone.behaviour/behaviour.js"
            type="text/javascript"
    ></script>
    <script src="${portal_url}/++resource++NuPlone.libraries/ordering.js"
            type="text/javascript"
    ></script>
    <tal:block replace="tile:scripts" />
    <metal:block define-slot="scripts" />
  </body>
</html>
