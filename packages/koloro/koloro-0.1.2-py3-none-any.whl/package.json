{
  "version": "0.1.2",
  "private": true,
  "devDependencies": {
    "prettier": "^2.3.1",
    "conventional-changelog-cli": "^2.1.1"
  },
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "fmt": "prettier --write . && sh scripts/run_code_style.sh fmt",
    "lint": "prettier --check . && sh scripts/run_code_style.sh lint",
    "setup:ci": "pnpm i --frozen-lockfile && pip install .[dev]",
    "setup:dev": "pnpm i && pip install -e '.[dev]'",
    "test": "pytest"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 80,
    "trailingComma": "none"
  }
}
